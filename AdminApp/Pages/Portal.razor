@using AdminApp.Pages.FilmsPages
@using AdminApp.Pages.DirectorsPages
@using AdminApp.Pages.GenresPages


@page "/{Route}"


@if (Route == Routes.Films)
{
	<FilmsPortal />
}
@if (Route == Routes.Directors)
{
	<DirectorsPortal />
}
@if (Route == Routes.Genres)
{
	<GenresPortal />
}
@code {
	[Parameter] public string Route { get; set; } = string.Empty;
}
