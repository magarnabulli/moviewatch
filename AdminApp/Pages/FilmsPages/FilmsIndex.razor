
<table class="table m-1">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Released</th>
			<th>Director</th>
			<th>Free</th>
			<th>Genres</th>
			<th>Delete</th>
			<th>Update</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Title</td>
				<td>@item.Description.Truncate(40)</td>
				<td>@item.Realeased.ToShortDateString()</td>
				<td>@item.Director.Name</td>
				<td>@(item.Free ? "Free" : "")</td>
				<td>
					@foreach (var genre in item.FilmGenres)
					{
						<li>@genre.Name</li>
					}
				</td>
				<td>
					<div class="d-flex me-1">
						<button class="btn btn-outline-danger rounded-0" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Delete, item.Id)))">Delete</button>
						<button class="btn btn-outline-danger rounded-0" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Update, item.Id)))">Update</button>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

@code {
	[Parameter] public UpdateFilmDto UpdateModel { get; set; } = new();
	[Parameter] public List<FilmDto> Model { get; set; } = new();//för att kunna prenumerera på eventet och skicka in modellen till andra komponenten behövs [Parameter] attributet och vara public!!
	[Parameter] public EventCallback<ClickModel> OnClick { get; set; }
	[Parameter] public string Page { get; set; } = string.Empty;

}
